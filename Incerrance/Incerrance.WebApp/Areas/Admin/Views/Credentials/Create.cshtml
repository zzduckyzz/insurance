@model Incerrance.Model.DAL.Credential

@{
    ViewBag.Title = "Add New Permission";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.UserGroupId, "Role", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.DropDownList("UserGroupId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserGroupId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.RoleId, "Permission", htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group  text-right">
            <div class="col-md-offset-2 col-md-11">
                <button type="submit" class="btn-sm btn-group-sm btn-primary">Save</button>
            </div>
        </div>
    </div>
}

<div>
    <a href="/quan-tri/phan-quyen-nguoi-dung" class="btn btn-secondary"><i class="fas fa-angle-left"></i> Back</a>
</div>