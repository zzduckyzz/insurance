@model IEnumerable<Incerrance.Model.DAL.ClaimInsurance>

@{
	ViewBag.Title = "Claim Insurance List";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	int i = 1;
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary"> Claim Insurances List</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>
							STT
						</th>
						<th>
							Full Name
						</th>
						<th>
							Place Of Accident
						</th>
						<th>
							TotalMoney
						</th>
						<th>
							Insurrance
						</th>
						<th>
							Status
						</th>
						<th>
							Claim date
						</th>
						<th class="text-center" style="width: 115px;"></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
					<tr>
						<td class="text-center">
							@i
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Registration_Insurance.FullName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.PlaceOfAccident)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Registration_Insurance.TotalMoney)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Registration_Insurance.Insurrance.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Status)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CreatedOn)
						</td>
						<td>
							<a class="btn-sm btn-group-sm btn-success" href="/Admin/ClaimInsurances/Edit?id=@item.Id"><i class="far fa-edit"></i></a>
							<a class="btn-sm btn-group-sm btn-secondary dialog-link" href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-info"></i></a>
						</td>
					</tr>
						i++;
					}
				</tbody>
			</table>
			@if (Model.Count() <= 0)
			{
				<div class="text-center text-danger">No data</div>
			}
		</div>
	</div>
</div>
