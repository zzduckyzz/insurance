@model Incerrance.Model.DAL.ClaimInsurance

@{
	ViewBag.Title = "Update Claim Insurance";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
<div class="form-horizontal">
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)
	@Html.HiddenFor(model => model.Registration_InsuranceId)
	@Html.HiddenFor(model => model.UserId)
	@Html.HiddenFor(model => model.PlaceOfAccident)
	@Html.HiddenFor(model => model.DateOfAccident)
	@Html.HiddenFor(model => model.PolicyEndDate)
	@Html.HiddenFor(model => model.Status, "Responded")
	@Html.HiddenFor(model => model.Description)
	@Html.HiddenFor(model => model.ModifiedBy)
	@Html.HiddenFor(model => model.CreatedOn)
	@Html.HiddenFor(model => model.CreatedBy)
	@Html.HiddenFor(model => model.ModifiedOn)
	<div class="form-group">
		@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<p>@Model.Description</p>
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Reply, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Reply, new { htmlAttributes = new { @class = "form-control", rows = 5,  @required = "required " } })
			@Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.InsuredAmount, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.InsuredAmount, new { htmlAttributes = new { @class = "form-control" , @required = "required" } })
			@Html.ValidationMessageFor(model => model.InsuredAmount, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group mt-4 text-right">
		<div class="col-md-offset-2 col-md-11">
			<button type="submit" class="btn-sm btn-group-sm btn-primary">Reply</button>
		</div>
	</div>
</div>
}

<div>
	<a href="/Admin/Insurrances/Index" class="btn btn-secondary"><i class="fas fa-angle-left"></i> Cancer</a>
</div>
