@model IEnumerable<Incerrance.Model.DAL.Vehicle>

@{
	ViewBag.Title = "List Vehicle";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	int i = 1;
}

<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<p>
					<a href="/Admin/Vehicles/Create" class="btn btn-group-sm btn-primary text-decoration-none"><i class="fa fa-plus"></i> Add new</a>
				</p>
				<thead>
					<tr>
						<th>
							STT
						</th>
						<th>
							Name
						</th>
						<th>
							Vehicle Type
						</th>
						<th>
							Vehicle Model
						</th>
						<th>
							Image Vehicle
						</th>
						<th>
							Vehicle Version
						</th>
						<th>
							Vehicle Engine Number
						</th>
						<th class="text-center" style="width: 115px;"></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
					<tr>
						<td class="text-center">
							@i
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.VehicleType.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.VehicleModel)
						</td>
						<td>
							<img src="@Html.DisplayFor(modelItem => item.ImageVehicle)" width="100" height="70" />
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.VehicleVersion)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.VehicleEngineNumber)
						</td>
						<td>
							<a class="btn-sm btn-group-sm btn-success" href="/Admin/Vehicles/Edit?id=@item.Id"><i class="far fa-edit"></i></a>
							<a class="btn-sm btn-group-sm btn-secondary dialog-link" href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-info"></i></a>
							<a class="btn-sm btn-group-sm btn-danger dialog-link" href="@Url.Action("Delete", new { id = item.Id })"><i class="far fa-trash-alt"></i></a>
						</td>
					</tr>
						i++;
					}
				</tbody>
			</table>
			@if (Model.Count() <= 0)
			{
				<div class="text-center text-danger">No data</div>
			}
		</div>
	</div>
</div>
