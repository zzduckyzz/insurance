@model ShoeShopOnline.WebApp.Models.RegisterModel
@using BotDetect.Web.Mvc;
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--start-account-->
<div class="account">
    <div class="container">
        <div class="account-bottom">
            @using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="col-md-12 account-left">

                    @Html.AntiForgeryToken()
                    <div class="account-top heading">
                        <h3>Đăng ký</h3>
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="col-md-6">
                        <div class="address">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Tên đăng nhập" })
                        </div>
                        <div class="address">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                            @Html.PasswordFor(model => model.Password, new { @placeholder = "Mật khẩu" })
                        </div>
                        <div class="address">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "Xác nhận mật khẩu" })
                        </div>
                        <div class="address">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="address">
                            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.FirstName, new { @placeholder = "Họ lót" })
                        </div>
                        <div class="address">
                            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Tên" })
                        </div>
                        <div class="address">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Address, new { @placeholder = "Địa chỉ" })
                        </div>
                        <div class="address">
                            @{ MvcCaptcha exampleCaptcha = new MvcCaptcha("ExampleCaptcha");
                                exampleCaptcha.UserInputID = "CaptchaCode";}
                            @Html.Captcha(exampleCaptcha)
                            @Html.TextBox("CaptchaCode")
                        </div>
                        <div class="address">
                            <input type="submit" value="Đăng ký">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!--end-account-->