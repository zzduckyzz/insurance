@model Incerrance.Model.DAL.Product
@{
    ViewBag.Title = "Insurance details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .imageDetail{
        transition: all .4s ease-in-out;
    }
    .imageDetail:hover{
        transform: scale(1.4);
    }
</style>
<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/trang-chu">Home</a></li>
                <li class="active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--start-single-->
<div class="single contact">
    <div class="container">
        <div class="single-main">
            <div class="col-md-9 single-main-left">
                <div class="sngl-top">
                    <div class="col-md-12 single-top-right">
						<div class="details-left-info simpleCart_shelfItem">
							<h3>@Model.Name</h3>
							<p class="availability">
								Status:
								@if (Model.Quantity > 0)
								{
									<span class="text-primary">Still insurance</span>
								}
								else
								{
									<span class="text-danger">Insurance is temporarily out</span>
								}
							</p>
							<div class="single-but item_add">
								<a href="/them-gio-hang?productId=@Model.Id&quantity=1">
									@if (Model.Quantity > 0)
									{
										<input type="submit" value="Thêm vào giỏ" />
									}
									else
									{
										<input type="submit" disabled value="Thêm vào giỏ" />
									}
								</a>
							</div>
							<p class="quick_desc">@Html.Raw(Model.Description)</p>
							<div class="clearfix"> </div>


						</div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="latest products">
                    <div class="product-one">
                        @{ Html.RenderAction("LoadLastedProduct", "Product");}
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>




            <div class="col-md-3 single-right">
				<h3>Insurance type</h3>
                <ul class="product-categories">
                    @{ Html.RenderAction("LoadCategory", "Product");}
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--end-single-->