@model Incerrance.WebApp.Models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--start-account-->
<div class="account">
    <div class="container">
        <div class="account-bottom">
            <div class="col-md-3"></div>
            <div class="col-md-6 account-left">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <form>
                        <div class="account-top heading">
							<h3>Reset Password</h3>
                        </div>
                        <div class="text-success">
                            @ViewBag.Message
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="address">
							<span>Password</span>
                            @Html.EditorFor(model => model.NewPassword, new { })
                        </div>

                        <div class="address">
							<span>Confirm password</span>
                            @Html.EditorFor(model => model.ConfirmPassword, new { })
                        </div>
                        @Html.HiddenFor(a => a.ResetCode)

                        <div class="address">
							<a class="" href="/dang-nhap">Log in</a>
                            <input type="submit" value="Confirm"/>
                        </div>
                    </form>
                }
                <div class="clearfix"> </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
<!--end-account-->
<div>
    @Html.ActionLink("Trang chủ", "Index")
</div>

