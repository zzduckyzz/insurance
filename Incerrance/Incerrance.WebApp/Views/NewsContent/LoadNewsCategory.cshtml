@model IEnumerable<Incerrance.Model.DAL.NewsCategory>
@if ((int)ViewBag.Count > 0)
{
    <li><a href="/tin-tuc">All news</a></li>
    foreach (var item in Model)
    {
        var url = "/loai-tin-tuc/" + item.MetaTitle + "/" + item.Id;
        <li><a href="@url">@item.Name</a> <span class="count">(@item.News.Where(s=>s.IsDeleted == false).Count())</span></li>
    }
}

